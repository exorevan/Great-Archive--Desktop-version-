        <Button Content="Вперёд" Click="ForwardPage" HorizontalAlignment="Right" Margin="0,217,50,0" VerticalAlignment="Top" Height="40" Width="73"/>
        <Button Content="Вернутсья" Click="GoBack" HorizontalAlignment="Left" Margin="677,38,0,0" VerticalAlignment="Top" Height="47" Width="77"/>
